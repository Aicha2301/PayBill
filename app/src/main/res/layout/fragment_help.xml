<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".HelpFragment">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"

        >
        <TextView
            android:textColor="@color/white"
            android:background="@color/black"
            android:textAllCaps="true"
            android:textStyle="bold"
            android:gravity="center"
            android:padding="@dimen/dim_all"
            android:textSize="@dimen/dim_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/contactHaut" />

        <GridLayout
            android:id="@+id/GridLayout1"
            android:layout_width="wrap_content"
            android:layout_height="360dp"
            android:columnCount="2"
            android:orientation="horizontal"
            android:rowCount="2"
            tools:context=".GridXMLActivity">

            <ImageView
                android:layout_width="202dp"
                android:layout_height="448dp"
                android:layout_row="0"
                android:layout_column="0"
                android:layout_gravity="left|top"
                android:src="@mipmap/ic_10_foreground" />

            <ImageView
                android:layout_width="207dp"
                android:layout_height="287dp"
                android:layout_gravity="left|top"
                android:src="@mipmap/ic_11_foreground" />
        </GridLayout>

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="354dp"
            android:layout_gravity="left"
            android:src="@mipmap/ic_13" />

    </LinearLayout>

</ScrollView>